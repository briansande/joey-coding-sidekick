{
  "name": "joey-coding-sidekick",
  "displayName": "joey-coding-sidekick",
  "description": "A coding sidekick to keep you company",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "extensionDependencies": [
    "RooVeterinaryInc.roo-cline"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Joey Sidekick",
      "properties": {
        "joey-sidekick.flipped": {
          "type": "boolean",
          "default": false,
          "description": "Whether Joey is flipped horizontally."
        },
        "joey-sidekick.debugMenu": {
          "type": "boolean",
          "default": false,
          "description": "Show the debug menu in the sidebar."
        },
        "joey-sidekick.showAchievements": {
          "type": "boolean",
          "default": true,
          "description": "Show achievement awards on the pet container."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "joey-sidekick",
          "title": "JOEY",
          "icon": "media/joey.svg"
        }
      ]
    },
    "views": {
      "joey-sidekick": [
        {
          "id": "joey.sidebar",
          "name": "JOEY",
          "type": "webview",
          "contextualTitle": "JOEY"
        }
      ]
    },
    "commands": [
      {
        "command": "joey-coding-sidekick.startTask",
        "title": "JOEY: Start New Roocode Task"
      },
      {
        "command": "joey-sidekick.resetStats",
        "title": "JOEY: Reset Stats"
      },
      {
        "command": "joey-sidekick.flipJoey",
        "title": "JOEY: Flip Joey"
      },
      {
        "command": "joey.showStats",
        "title": "JOEY: Show Stats",
        "icon": "$(gear)"
      },
      {
        "command": "joey-sidekick.clearAchievements",
        "title": "JOEY: Clear Achievements"
      },
      {
        "command": "joey-sidekick.toggleAchievements",
        "title": "JOEY: Toggle Achievements"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "joey.showStats",
          "when": "view == joey.sidebar",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "sharp": "^0.34.3",
    "typescript": "^5.9.2"
  }
}
